html{
    background-image:url('image/hatter.jpg');
    font-family: Arial;
}
@media screen and (min-width: 601px) {
    div[class="desktop"],div[class="cards"], strong>ul{
        font-size: 15px;
    }
}
@media screen and (max-width: 600px) {
    div[class="desktop"],div[class="cards"],strong>ul, div>table, div>form {
        font-size: 10px;
    }
}
#sticky {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 10;
}
.desktop{
    text-align: center;
    padding: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: inherit;
}
.menu{
    overflow: hidden;
    background-color: #3d3939;
    width:100%;
    height:50px;
}

.menu a {
    float: left;
    font-size: 16px;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}
.dropdown{
    float: left;
    overflow: hidden;
}
.dropdown .dropbtn{
    font-size: 16px;
    border: none;
    outline: none;
    color: white;
    padding: 14px 16px;
    background-color: inherit;
    font-family: inherit;
    margin: 0;
}
.menu a:hover, .dropdown:hover .dropbtn {
    background-color: lightgray;
}
.dropdown-content{
    display: none;
    position: fixed;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}
.dropdown-content a{
    float: none;
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
}
.dropdown-content a:hover {
    background-color: #ddd;
}
.dropdown:hover .dropdown-content {
    display: block;
}
.cover{
    width :900px;
    height:400px;
    background-color: #000;
    margin-top:50px;
    display: flex;
}
*{
    margin:0px;
    padding: 0px;
}
.main{
    display:inline-block;
    justify-content: center;
    vertical-align: center;
    margin-right: 0;
    margin-left: 0;
    margin-block: 0;
	padding-top: 100px;
	
}

.cards{
    width: 20%;
    display: inline-block;
    background-color: #F2F4F4;
    border-radius: 5px;
    margin: 90px;
    box-shadow: 2px 2px 10px black;

}

.image img{
    width:100%;
    max-width: 400px;
    max-height: 400px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}
.title{
    text-align: center;
    padding: 5px;
    font-size: 15px;
}
.description{
    text-align: center;
    padding: 4px;
}
button{
    margin-top: 30px;
    margin-bottom: 30px;
    background-color: white;
    border:1px solid black;
    padding: 5px;
    border-radius: 5px;
    cursor: pointer;
}
button:hover{
    background-color:black;
    color: white;
    transition: .5s;
}

div>form[class="regisztracio"], div>form[class="bejelentkezes"]
{
    display: inline-block;
    position: relative;
    margin-top: 250px;
    border-radius: 5px;
    background-color: rgba(211,211,211,0.4);
    padding: 20px;
    font-size: 18px;
}
body{
    text-align:center;
}


form
{
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
    text-align: left;

}
input {
    border: none;
    border-bottom: 1px solid black;
    background-color: transparent;
    display: inline-block;

}


fieldset {
    display: inline;
    margin-left: 2px;
    margin-right: 2px;
    padding: 0.35em 0.75em 0.625em;
    border:none;
    position: center;
    top: 30%;
}
.buttons{
    justify-content: center;
    align-items: center;
    position: initial;
}

#bejelentkezes{
    transition-duration: 0.4s;
    background-color: mediumseagreen;
    color: white;
    border: 2px solid mediumseagreen;
    border-radius: 4px;
    padding: 14px 40px;
    margin: 0px 20px;
    position: inherit;
    width: fit-content;
    left:14%;
}
#bejelentkezes:hover {
    background-color: transparent;
    color: black;
}

#kuldes{
    transition-duration: 0.4s;
    background-color: mediumseagreen;
    color: white;
    border: 2px solid mediumseagreen;
    border-radius: 4px;
    padding: 14px 40px;
    margin: 20px 20px;
    position: center;
    width:fit-content;
    top: 500px;
}
#kuldes:hover {
    background-color: transparent;
    color: black;
}

#reset:hover {
    background-color: transparent;
    color: black;
}

#reset {
    background-color: darkred;
    transition-duration: 0.4s;
    color: white;
    border: 2px solid darkred;
    border-radius: 4px;
    padding: 14px 40px;
    position: center;
    left: 50%;
    width:fit-content;
    margin:10px;
}

legend {
    display: block;
    width: 100%;
    padding: 0;
    margin-bottom: 20px;
    font-size: 23px;
    line-height: inherit;
    color: black;
    border: 0;
    text-align:center;

}

li {
    float: left;
    display: block;
    padding: 10px 8%;
    opacity: 1;
    z-index: 5;
    font-size: 15px;



}
footer>ul{
	color: white;
}

ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    top:0;
    overflow: hidden;
    position: relative;
    opacity: 1;
    text-align: center;
    left: 20px;
    z-index: 5;
    text-shadow: 0 0 3px white;
    color: black;

}
.profil{
    color: black;
    text-shadow: 0 0 3px white;
    text-align: center;
}

footer{
    background-color: #3d3939;
    width: 100%;
    position: fixed;
    left:0;
    bottom:0;
    height: 55px;
    padding: 2px;

}


#page-container {
    position: relative;
    min-height: 100vh;

}

#content-wrap {
    padding-bottom: 2.5rem;
}


div>table
{
    display: inline-block;
    position: relative;
    text-align:center;
    margin-top:200px;
    border-radius: 5px;
    background-color: rgba(211,211,211,0.4);
    padding: 20px;
    font-size: 18px;
}

th, td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid black;
    width: fit-content;
}

th{
    background-color: lightgrey;
}

table {
    border-collapse: collapse;
	text-align:center;
	margin-left: 20%;
	
	
}
main{
    margin-bottom: fill;
	 
}

.box{
    background-color: #fefbd8;
    max-width: 600px;
    width:90%;
    padding: 20px;
    margin:40px auto;
}
.image_foo {
    display: block;
    float: right;
    width:100%;
    max-width: 600px;
    max-height:600px;
    margin-top: 90px;
}
.foo_szoveg{
    background-color: transparent;
    float: left;
    display: inline-block;
    padding:20px;
    width:300px;
    margin-left: 10px;
    margin-right: 15px;
    border-radius: 3px;
    margin-top: 100px;

}
.p_fooldal{
    color:#3d3939;
    font-size: 32px;
    font-family: "Arial";
    font-style: oblique;
    text-align: center;
    text-shadow: 1px 1px;
    margin-top: 20px;
}
video {
    float: left;
    margin-top: 30px;
}

h1{
    translate: 0 150px;
}
#content {
    padding: 20px;
}

#content hr {
    margin-bottom: 20px;
}

form.login, form.signup {
    width: 650px;
    background-color: #FFFFFF;
    padding: 30px;
    border: 5px solid #DF5029;
    margin: 45px auto;
}

form input {
    margin-bottom: 20px;
}

label {
    margin-top: 10px;
    margin-bottom: 10px;
}
input[type="text"], input[type="password"], input[type="number"] {
    display: inline-block;
    height: 30px;
    padding-left: 0px;
    outline: none;
}







